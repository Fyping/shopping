<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.fangself.model.dao.AdminMapper" >
  <insert id="insert" 
  parameterType="cn.com.fangself.model.pojo.Admin">
  	<!-- 使用这种方式要注意，resultType是要设置的，否则将抛异常，该值对应的User类中的主键类型 -->
	<!-- keyProperty对应的是User类中的主键名，假设取名为user_id，则这边也要改成user_id -->
  		<selectKey keyProperty="id" resultType="int">
			select LAST_INSERT_ID()
		</selectKey>
		insert into tb_Admin(adminuuid, adminpassword) values(#{adminuuid}, #{adminpassword})	
  </insert>
  <select id="selectAdminByPrimaryKey" parameterType="java.lang.Integer" resultType="cn.com.fangself.model.pojo.Admin">
  	select * from tb_Admin where adminid = #{adminid};
  </select>
  <update id="updateAdminByPrimaryKey" parameterType="cn.com.fangself.model.pojo.Admin">
  	update tb_Admin set adminuuid=#{adminuuid} ,adminpassword=#{adminpassword} where adminid=#{adminid}; 
  </update>
  <select id="selectAdminByAdminIdAndPwd" parameterType="cn.com.fangself.model.pojo.Admin" resultType="cn.com.fangself.model.pojo.Admin">
  	select * from tb_Admin where adminid = #{adminid} and adminpassword= #{adminpassword}
  </select>
</mapper>